{
  "name": "knowledge-base-backend",
  "version": "1.0.0",
  "description": "Backend proxy for RAGFlow AI Chat and AI Search with Langfuse logging",
  "type": "module",
  "main": "dist/app/index.js",
  "scripts": {
    "dev": "tsx watch src/app/index.ts",
    "prebuild": "rimraf dist",
    "build": "tsc --sourceMap false --declaration false --declarationMap false && tsc-alias",
    "build:prod": "tsc --sourceMap false --declaration false --declarationMap false && tsc-alias",
    "start": "node dist/app/index.js",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "db:migrate": "tsx src/scripts/migrate.ts",
    "db:migrate:make": "tsx src/scripts/make_migration.ts",
    "db:migrate:rollback": "tsx src/scripts/rollback_migration.ts",
    "db:seed": "tsx src/scripts/run_seeds.ts"
  },
  "keywords": [
    "ragflow",
    "langfuse",
    "proxy",
    "ai-chat"
  ],
  "license": "MIT",
  "dependencies": {
    "@types/socket.io": "^3.0.1",
    "compression": "^1.8.1",
    "connect-redis": "^9.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "express-rate-limit": "^8.2.1",
    "express-session": "^1.18.0",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "http-proxy-middleware": "^3.0.2",
    "https-proxy-agent": "^7.0.6",
    "knex": "^3.1.0",
    "langfuse": "^3.27.0",
    "minio": "^8.0.6",
    "multer": "^2.0.2",
    "node-cron": "^4.2.1",
    "pg": "^8.16.3",
    "redis": "^5.10.0",
    "socket.io": "^4.8.3",
    "uuid": "^10.0.0",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@types/compression": "^1.8.1",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.0",
    "@types/hpp": "^0.2.7",
    "@types/minio": "^7.1.0",
    "@types/multer": "^2.0.0",
    "@types/node": "^22.9.0",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.11.10",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.14.0",
    "@typescript-eslint/parser": "^8.14.0",
    "@vitest/coverage-v8": "^2.1.9",
    "@vitest/ui": "^2.1.5",
    "eslint": "^9.14.0",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "vitest": "^2.1.9"
  }
}